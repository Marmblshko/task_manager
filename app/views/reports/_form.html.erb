<%= simple_form_for [task, report], html: { class: "form report" } do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, required: true, input_html: { autofocus: true } %>
    <%= f.input :description, required: true, input_html: { autofocus: true } %>
  </div>

  <div class="form-actions">
    <%= link_to "Cancel", task_path(task), class: "btn btn-secondary mt-2 py-2 px-4 rounded-lg text-black font-semibold hover:bg-red-500 transition duration-300 ease-in-out mb-2" %>
    <%= f.submit "Save", class: "btn btn-secondary mt-2 py-2 px-4 rounded-lg text-black font-semibold hover:bg-blue-500 transition duration-300 ease-in-out mb-2" %>
  </div>
<% end %>

