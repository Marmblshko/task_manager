<%= form_for @task do |f| %>
  <% if @task.errors.any? %>
    <% @task.errors.full_messages.each do |message| %>\
      <h3><%= message %> </h3>
    <% end %>
  <% end %>
  <%= f.simple_fields_for @report do |report_form| %>
    <% if @report.errors.any? %>
      <% @report.errors.full_messages.each do |message| %>\
        <h3><%= message %> </h3>
      <% end %>
    <% end %>


    <%= report_form.error_notification %>
    <%= report_form.input :title, input_html: { autofocus: true } %>
    <%= report_form.input :description, input_html: { autofocus: true } %>
    <%= report_form.submit "Save", class: "btn btn-secondary mt-2 py-2 px-4 rounded-lg text-black font-semibold hover:bg-blue-500 transition duration-300 ease-in-out" %>
  <% end %>
<% end %>
