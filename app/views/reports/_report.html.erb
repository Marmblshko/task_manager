<%= turbo_frame_tag report do %>
  <div class="report">
    <div class="bg-blue-100 p-4 rounded-lg shadow-md mb-4">
      <p class="text-gray-700 mb-4">Report name: <%= report.title %> Done by <%= report.creator_username %></p>
      <p class="text-gray-700 mb-4">Description: <%= report.description %></p>

      <% if current_user && ((current_user.role == 'Moderator' || current_user.role == 'Admin') || current_user.id == report.creator_id) %>
        <div class="task_actions flex flex-row space-x-2">
          <%= link_to "Edit Report", edit_task_report_path(task, report), class: "btn btn-light mr-2 py-2 px-4 rounded-lg text-blue-500 font-semibold hover:bg-blue-200 transition duration-300 ease-in-out" %>
          <%= button_to "Destroy Report", task_report_path(task, report), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "btn btn-light py-2 px-4 rounded-lg text-red-500 font-semibold hover:bg-red-200 transition duration-300 ease-in-out" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
