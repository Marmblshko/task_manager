<%= turbo_frame_tag report do %>
  <div class="report">
      <p class="text-gray-700 mb-4">Report name: <%= report.title %></p>
      <p class="text-gray-700 mb-4">Description: <%= report.description %></p>
      <%= link_to "Edit Report", edit_task_report_path(task, report), class: "btn btn-secondary bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md" %>
      <%= button_to "Destroy Report", task_report_path(task, report), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "btn btn-secondary bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-md" %>

      </div>
  <% end %>
