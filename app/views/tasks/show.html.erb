<%= turbo_stream_from :reports_list %>
<main class="container mx-auto mt-4">
  <%= link_to sanitize("&larr; Back to tasks"), tasks_path, class: "text-blue-500 mb-4 block" %>

      <%= turbo_frame_tag "detailed" do %>
      <%= render partial: "tasks/detailed_task" %>
      <% end %>

      <div class="flex flex-col space-x-2">

        <div class="header flex justify-between items-center mb-4">
          <h1 class="text-3xl font-bold mb-2 flex justify-start">Reports</h1>
          <%= link_to "New Report", new_task_report_path(@task), data: { turbo_frame: dom_id(Report.new) }, class: "rounded-full bg-sky-500 hover:bg-sky-700 text-white px-4 py-2 font-semibold transition duration-300 ease-in-out flex justify-end" %>
        </div>
        <%= turbo_frame_tag Report.new%>

          <%= turbo_frame_tag "reports" do %>
            <%= render @reports, task: @task %>
          <% end %>
      </div>
</main>
