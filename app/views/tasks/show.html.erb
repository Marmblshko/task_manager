<main class="container">
  <%= link_to sanitize("&larr; Back to tasks"), tasks_path %>
  <div class="header">
    <h1>
      <%= @task.title %>
    </h1>
    <div>
      <%= link_to "New report", new_task_report_url(@task, @report) %> |
      <%= link_to "Edit", edit_task_report_path(@task, @report) %> |
      <%= link_to "Destroy", task_report_path(@task, @report), method: :delete, data: { 'turbo-method': :delete } %> |
      <%= link_to "Show", task_report_path(@task, @report) %>
    </div>
  </div>
</main>