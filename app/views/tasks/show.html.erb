<main class="container mx-auto mt-4">
  <%= link_to sanitize("&larr; Back to tasks"), tasks_path, class: "text-blue-500 mb-4 block" %>
  <div class="bg-blue-100 p-4 rounded-lg shadow-md">
    <div class="header mb-4">
      <h1 class="text-3xl font-bold mb-2"><%= @task.title %></h1>
      <p class="text-gray-700 mb-4">Description: <%= @task.description %></p>
      <p class="text-gray-700 mb-4">Status: <%= @task.status %></p>
      <div class="flex space-x-2">
        <% if @task.report.present? %>
          <p class="text-gray-700 mb-4">Report: <%= @task.report.title %></p>
          <%= link_to "Show Report", task_report_path(@task, @report), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4" %>
          <%= link_to "Edit Report", edit_task_report_path(@task, @report), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4" %>
          <%= link_to "Destroy Report", task_report_path(@task, @report), method: :delete, data: { 'turbo-method': :delete }, class: "bg-red-500 hover:bg-blue-700 text-white font-bold py-2 px-4" %>
          <% else %>
          <%= link_to "New Report", new_task_report_url(@task, @report), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4" %>
          <% end %>
      </div>
    </div>
  </div>
</main>
