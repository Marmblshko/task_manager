<div class="task bg-blue-100 p-4 rounded-lg shadow-md mb-4">
  <%= link_to task.title, task_path(task), class: "text-blue-500 font-semibold text-xl mb-2 block" %>
  <div class="task_actions">
    <%= link_to "Edit", edit_task_path(task), class: "btn btn-blue mr-2 py-2 px-4 rounded-lg text-white font-semibold hover:bg-blue-500 transition duration-300 ease-in-out" %>
    <%= button_to "Delete", task_path(task), method: :delete, class: "btn btn-red py-2 px-4 rounded-lg text-white font-semibold hover:bg-red-500 transition duration-300 ease-in-out" %>
  </div>
</div>
