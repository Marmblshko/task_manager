<%= turbo_stream_from :projects_list %>

<main class="container mx-auto mt-4">
      <div class="header flex justify-between items-center mb-4">
        <h1 class="text-3xl font-bold mb-2">Projects</h1>
        <%= link_to "New project", new_project_path, data: { turbo_frame: dom_id(Project.new) }, class: "rounded-full bg-sky-500 hover:bg-sky-700 text-white px-4 py-2 font-semibold transition duration-300 ease-in-out" %>
      </div>

    <%= turbo_frame_tag Project.new %>

    <%= turbo_frame_tag "projects" do %>
      <%= render @projects %>
    <% end %>

  </div>
</main>