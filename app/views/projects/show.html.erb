<main class="container mx-auto mt-4">
  <%= link_to sanitize("&larr; Back to projects"), projects_path, class: "text-blue-500 mb-4 block" %>
  <div class="bg-blue-200 p-4 rounded-lg shadow-md">
    <h1 class="text-3xl font-bold mb-2">
      <%= @project.title %>
    </h1>
    <p class="text-gray-700 mb-4">Description: <%= @project.description %></p>
    <div class="border-t border-blue-300 pt-4">
      <% @project.tasks.each do |task| %>
        <div class="mb-2">
          <%= link_to task.title, task_path(task), class: "text-blue-600 font-semibold" %>
          <p class="text-gray-600">Description: <%= task.description %></p>
          <p class="text-gray-600">Status: <%= task.status %></p>
        </div>
      <% end %>
    </div>
  </div>
</main>