<main class="container">
  <%= link_to sanitize("&larr; Back to projects"), projects_path %>
  <div class="header">
    <h1>
      <%= @project.title %>
      <%= @project.users.name %>
      <%= @project.description %>
      <% @project.tasks.each do |task| %>
        <%= link_to task.title, task_path(task) %>
        <%= task.description %>
      <% end %>
    </h1>
  </div>
</main>