<div class="project bg-blue-100 p-4 rounded-lg shadow-md mb-4">
  <%= link_to project.title, project_path(project), class: "text-blue-500 font-semibold text-xl mb-2 block" %>
  <div class="project_actions">
    <%= link_to "Edit", edit_project_path(project), class: "btn btn-light mr-2 py-2 px-4 rounded-lg text-blue-500 font-semibold hover:bg-blue-200 transition duration-300 ease-in-out" %>
    <%= button_to "Delete", project_path(project), method: :delete, class: "btn btn-light py-2 px-4 rounded-lg text-red-500 font-semibold hover:bg-red-200 transition duration-300 ease-in-out" %>
  </div>
</div>